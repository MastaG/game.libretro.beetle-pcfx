<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.beetle-pcfx"
		name="PCFX (beetle)"
		version="1.0.1"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_android="game.libretro.beetle-pcfx.so"
                   library_linux="game.libretro.beetle-pcfx.so"
                   library_osx="game.libretro.beetle-pcfx.dylib"
                   library_windx="game.libretro.beetle-pcfx.dll"
                   library_wingl="game.libretro.beetla-pcfx.dll">
		<platforms>PCXFX</platforms>
		<extensions>pcfx</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_no_game>false</supports_no_game>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Beetle-pcfx v1.0.1</summary>
		<description>Source: https://github.com/libretro/beetle-pfcx-libretro</description>
		<platform>all</platform>
	</extension>
</addon>
